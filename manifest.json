{
	"manifest_version": 2,

	"name": "TCO Chaotic Addon",
	"description": "Allows players of Chaotic TCG to:\nSee their current build points in the TCO deck builder.\nExport and Import deck builds.",
	"version": "2.0",
	"icons": {
		"64": "icons/icon64.png",
		"128": "icons/icon128.png"
	},

	"permissions": [
		"*://www.tradecardsonline.com/*"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["*://www.tradecardsonline.com/*"],
			"js": ["_lib/jquery-3.3.1.min.js", "js/main.js"],
			"css": ["css/tracker.css"]
		}
	],

	"browser_action": {
		"default_title": "TCO Chaotic Addon",
		"default_icon": "icon64.png"
	},

	"web_accessible_resources": [
		"html/tracker.html",
		"js/tracker.js",
		"js/import.js",
		"js/export.js"
	]
}
