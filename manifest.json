{
	"manifest_version": 2,

	"name": "TCO BP Tracker",
	"description": "Allows users to see their current build points in the TCO deck builder.",
	"version": "1.1",
	"icons": {
		"64": "icon64.png",
		"128": "icon128.png"
	},

	"permissions": [
		"*://www.tradecardsonline.com/*"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["*://www.tradecardsonline.com/*"],
			"js": ["lib/jquery-3.3.1.min.js", "tracker.js"],
			"css": ["tracker.css"]
		}
	],

	"browser_action": {
		"default_title": "Build Point Tracker",
		"default_icon": "icon64.png"
	},

	"web_accessible_resources": [
		"tracker.html"
	]
}
